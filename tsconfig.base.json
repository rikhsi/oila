{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "useDefineForClassFields": false,
    "strictPropertyInitialization":false,
    "noPropertyAccessFromIndexSignature": false,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "module": "ESNext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dash/*": ["apps/dashboard/src/app/*"],
      "@oila/config": ["libs/config/src/index.ts"],
      "@oila/ui": ["libs/ui/src/index.ts"],
      "management/Routes": [
        "apps/management/src/app/remote-entry/entry.routes.ts"
      ],
      "seller/Routes": ["apps/seller/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
